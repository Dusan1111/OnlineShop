<!DOCTYPE html>
@model  OnlineShop.ViewModels.ProductViewModel
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")

</head>

<body>
    <style type="text/css">

        #ulWithoutBullets {
            list-style-type: none;
        }

    </style>
    @Html.Partial("_HorizontalNavBar")
    @using (Html.BeginForm("Index", "ProductCategory", FormMethod.Post))
    {
        <table>
            @for (int i = 0; i < Model.Filters.Count(); i++)
            {
                <tr>
                    <td>
                        @Html.CheckBoxFor(m => m.Filters[i].Selected, new { onclick = "this.form.submit();" })
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.Filters[i].Text)
                        @Html.HiddenFor(m => m.Filters[i].Value)
                        @Html.HiddenFor(m => m.Filters[i].Text)
                    </td>
                </tr>
            }
        </table>
        <br />
    }
    @*<div class="sidebar">
        <ul id="ulWithoutBullets">
            <li>
                <form action="/ProductCategory/Index" data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#home">
                    <input type="submit" value="Product categories" class="link_class btn btn-toolbar" />
                </form>
            </li>
            <li>
                <form action="/Product/Index" data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#home">
                    <input type="submit" value="Products" class="link_class btn btn-toolbar" />
                </form>
            </li>
        </ul>
    </div>*@

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>



    @Scripts.Render("~/bundles/lib")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>
</html>
